<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_social_mine_userinfo_rl"
        android:background="@drawable/main_listview_selector"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/RippleBackground">

            <com.yaozu.listener.widget.RoundCornerImageView
                android:id="@+id/fragment_social_mine_usericon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/usericon" />

            <ImageView
                android:id="@+id/fragment_social_mine_usericon_onclick"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/transparent_bg_selector"/>

            <TextView
                android:id="@+id/fragment_social_mine_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/fragment_social_mine_usericon"
                android:padding="5dp"
                android:text="迷失香"
                android:textColor="#363636"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fragment_social_mine_usericon"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/fragment_social_mine_usericon"
                android:padding="5dp">

                <TextView
                    android:id="@+id/fragment_social_mine_account_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号："
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/fragment_social_mine_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14dp" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_social_mine_nickname_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_listview_selector">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RippleBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#363636"
                android:textSize="16dp"
                android:text="昵称"/>
            <TextView
                android:id="@+id/fragment_social_mine_nickname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="迷失香"
                android:layout_alignParentRight="true"
                android:textSize="15dp"
                android:drawablePadding="5dp"
                android:layout_marginRight="10dp"
                android:drawableRight="@drawable/right_arrow"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_social_mine_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_listview_selector">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/RippleBackground">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="#363636"
                android:textSize="16dp"
                android:text="退出"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>