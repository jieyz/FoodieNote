<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_conner_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/edit_dialog_quitaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/main_listview_selector"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="确认手机号码"
            android:textColor="#363636"
            android:textSize="21dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="我们将发送验证码短信到这个号码:"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_verify_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="+86 "
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>

    <RelativeLayout
        style="@style/RippleBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/dialog_verify_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/dialog_verify_confirm"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#363636"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/dialog_verify_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:padding="10dp"
            android:text="确 定"
            android:textColor="#363636"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>