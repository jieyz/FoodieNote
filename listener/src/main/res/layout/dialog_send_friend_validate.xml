<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_conner_shape"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_send_friend_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="对方启用了朋友验证"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="你需要发送验证申请，对方通过后你才能添加其为好友"
            android:textColor="@color/gray_white"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_send_friend_edittext_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_send_friend_text"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <EditText
            android:id="@+id/dialog_send_friend_edittext"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appthemecolor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_send_friend_edittext_ll"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_send_friend_cancel"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/main_listview_selector"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/dialog_send_friend_ok"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/main_listview_selector"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/black"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>