<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_listview_selector">

    <RelativeLayout
        style="@style/RippleBackground"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/playing_item"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="#7EC0EE"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/playlist_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/playing_item"
            android:src="@drawable/play_playlist_icn_playing" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/playlist_playing"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="暗号"
                android:textColor="#363636"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/song_singer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:text="周杰伦"
                android:textColor="#7F7F7F"
                android:textSize="11dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:background="#447F7F7F" />

        <TextView
            android:id="@+id/upload_file"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="上传"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>